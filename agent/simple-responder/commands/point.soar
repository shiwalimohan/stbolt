sp {apply*process-message*point
   (state <s> ^name responder
              ^operator <o>
              ^io.input-link.message <message>)
   (<o> ^name process-message
        ^message <msgID>)
   (<message> ^id <msgID>
          ^words <w1>)
   (<w1> ^word point
         ^next <w2>)
   (<w2> ^word {<obj-id> <> here})
-->
   (<s> ^desired <d>)
   (<d> ^pointed-to <obj-id>
        ^message <msgID>)
}

sp {apply*process-message*point*here
   (state <s> ^name responder
              ^operator <o>
              ^io.input-link <il>)
   (<il> ^message <message>
         ^pointed-object {<obj-id> <> -1})
   (<o> ^name process-message
        ^message <msgID>)
   (<message> ^id <msgID>
          ^words <w1>)
   (<w1> ^word point
         ^next <w2>)
   (<w2> ^word here)
-->
   (<s> ^desired <d>)
   (<d> ^pointed-to <obj-id>
        ^message <msgID>)
}

sp {grab*propose*point
   (state <s> ^desired <d>)
   (<d> ^pointed-to <obj-id>
       -^status << complete error >>)
-->
   (<s> ^operator <o> +)
   (<o> ^name point
        ^actions.point.object-id <obj-id>)
}