sp {apply*process-message*pick-up
   (state <s> ^name responder
              ^operator <o>
              ^io.input-link.message <message>)
   (<o> ^name process-message
        ^message <msgID>)
   (<message> ^id <msgID>
          ^words <w1>)
   (<w1> ^word pick-up
         ^next <w2>)
   (<w2> ^word <obj-id>)
-->
   (<s> ^desired <d>)
   (<d> ^picked-up <obj-id>
        ^message <msgID>)
}

sp {grab*propose*pick-up
   (state <s> ^desired <d>)
   (<d> ^picked-up <obj-id>
       -^status << complete error >>)
-->
   (<s> ^operator <o> +)
   (<o> ^name grab-object
        ^actions.pick-up.object-id <obj-id>)
}