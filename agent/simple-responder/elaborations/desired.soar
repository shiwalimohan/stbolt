# Creates the description of the desired action to perform in order to follow the instructions

sp {elaborate*desired
   (state <s> ^superstate.operator <o>
              ^attribute operator
              ^impasse no-change)
   (<o> ^name follow-instructions)
-->
   (<s> ^desired <d>)
}

sp {elaborate*desired*parameters
   (state <s> ^superstate <ss>
              ^desired <d>)
   (<ss> ^operator.name follow-instructions
         ^instructions <i>)
   (<i> ^<param> <val>)
-->
   (<d> ^<param> <val>)
}
