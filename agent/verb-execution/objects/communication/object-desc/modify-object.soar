sp {object-desc*propose*modify-object
   (state <s> ^name object-desc
              ^object <obj>
             -^modified)
-->
   (<s> ^operator <o> +)
   (<o> ^name modify-object
        ^category object-processing)
}

sp {object-desc*apply*modify-object*name
   (state <s> ^name object-desc
              ^operator.name modify-object
              ^description.word <name>
              ^object <obj>)
-->
   (<obj> ^name <name>)
}

sp {object-desc*apply*modify-object*mark-modified
   (state <s> ^name object-desc
              ^operator.name modify-object)
-->
   (<s> ^modified true)
}

              