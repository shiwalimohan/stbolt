sp {describe-scene*propose*describe-object
   (state <s> ^name describe-scene
              ^topstate.object <obj>
             -^described <obj>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name describe-object
        ^category object-processing
        ^object <obj>)
}

sp {describe-scene*apply*describe-object*mark*described
   (state <s> ^name describe-scene
              ^operator <o>)
   (<o> ^name describe-object
        ^object <obj>
        ^description)
-->
   (<s> ^described <obj>)
}

