#### elaborate learning operator
sp {elaborate*learning-operator
   (state <s> ^name explain
   	      ^segment.purpose.indexed-operator <op>)
   (<op> ^name <op_name>)
-->
   (<s> ^learning-operator <op_name>)
} 

### copy to all the substate
sp {copy*learning-operator
   (state <s> ^superstate.learning-operator <op_name>)
-->
   (<s> ^learning-operator <op_name>)
}


### copy structures in the new instructed section

sp {explain*copy*superstate*relevant*structures*object
   (state <s> ^superstate <ss>)
   (<ss> ^name explain
   	 ^object <m>)
   (<m> ^id <mid>
   	-^focus yes)
-->
   (<s> ^object <nm>)
#   (<nm> ^id (make-constant-symbol))
   (<nm> ^id <mid>)
}

sp {explain*copy*superstate*relevant*structures*object*focus
   (state <s> ^superstate <ss>)
   (<ss> ^name explain
   	 ^object <m>)
   (<m> ^id <mid>
   	^focus yes)
-->
   (<s> ^object <nm>)
   (<nm> ^id <mid>
#   (<nm> ^id (make-constant-symbol)
   	 ^focus yes)
}


