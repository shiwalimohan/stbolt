sp {elaborate*state*index-goal
   (state <s> ^name index-goal
   	      ^superstate.operator <sop>)
   (<sop> ^name index-goal
   	  ^information <info>
	  ^indexed-operator <iop>)
   (<iop> ^_metadata.procedural-id <proc>)
   -->
   (<s> ^information <info>
   	^proc-id <proc>
	^indexed-operator <iop>
	^bit flip)
}

