### propose pick-up for all known objects if the robot is in their vicinity, limiting the functionality of robot pick-up a little bit

sp {elaborate*grabbed*object
   (state <s> ^self <self>
   	      ^object <obj>)
   (<self> ^grabbed-object <id> <> -1)
   (<obj> ^id <id>)
-->
   (<s> ^grabbed <obj>)
}   

sp {copy*grabbed
   (state <s> ^superstate <ss>
   	      ^io)
   (<ss> ^grabbed <obj>)
-->
   (<s> ^grabbed <obj>)
}

sp {propose*pickup*object
   (state <s> ^object <obj>
   	       -^problem-space << lgsoar message-interpretation >>
	      -^grabbed <obj>)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_pick-up-object
   	 ^argument1 <obj>)
}

sp {elaborate*pickup*object*action
   (state <s> ^operator <op> +)
   (<op> ^argument1 <obj>
   	 ^name op_pick-up-object)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.pick-up.object-id <id>
 	 ^category primitive-action
	 ^success yes)
   (<op> ^kind non-atomic)
}

### action model
sp {apply*pickup*object*action-model
   (state <s> ^object <obj>
   	      -^io
	      ^operator <op>)
   (<op> ^name op_pick-up-object
   	 ^argument1 <obj>)
-->
   (<s> ^grabbed <obj>)
}
   