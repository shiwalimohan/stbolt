## propose close location for all open locations
sp {propose*close*location
   (state <s> ^object <obj>
   	       -^problem-space << lgsoar message-interpretation >>
	       ^topstate <ts>
	       ^open <obj>)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_close-location
   	 ^argument1 <obj>
	 ^category primitive-action)
}

sp {elaborate*close*location-action
   (state <s> ^operator <op> +
   	      ^io)
   (<op> ^argument1 <obj>
   	 ^name op_close-location)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.set-state <point>
 	 ^category primitive-action)
   (<point> ^id <id>
   	    ^name door
   	    ^value closed)
   (<op> ^kind non-atomic)
}


## action-model

sp {apply*closed*action-model
   (state <s> ^operator <op>	
	     -^io
	     ^object <obj>
	     ^superstate <ss>
	     ^open <obj>)
   (<op> ^name op_close-location
   	 ^argument1 <obj>)
-->
   (<s> ^open <obj> -
   	^closed <obj>)
}