   (state <s> ^object <obj>
   	       -^problem-space << lgsoar message-interpretation >>
	       ^topstate <ts>)
   (<obj> ^heat on)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_stop
   	 ^argument1 <obj>)
}

sp {elaborate*turn*location-action*off
   (state <s> ^operator <op> +)
   (<op> ^argument1 <obj>
   	 ^name op_stop)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.set-state <point>
 	 ^category primitive-action)
   (<point> ^id <id>
   	    ^name heat
   	    ^value off)
   (<op> ^kind non-atomic)
}
