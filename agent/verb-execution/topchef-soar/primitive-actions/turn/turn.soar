## propose heat on for off and vice-versa
sp {propose*turn*location*off
   (state <s> ^object <obj>
   	       -^problem-space << lgsoar message-interpretation >>
	       ^topstate <ts>
	       ^off <obj>)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_turn-location
   	 ^argument1 <obj>)
}

sp {elaborate*turn*location-action*on
   (state <s> ^operator <op> +
   	      ^on <obj>)
   (<op> ^argument1 <obj>
   	 ^name op_turn-location)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.set-state <point>
 	 ^category primitive-action)
   (<point> ^id <id>
   	    ^name heat
   	    ^value off)
   (<op> ^kind atomic)
}

sp {propose*turn*location*on
   (state <s> ^object <obj>
   	       -^problem-space << lgsoar message-interpretation >>
	       ^topstate <ts>
	       ^on <obj>)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_turn-location
   	 ^argument1 <obj>)
}

sp {elaborate*turn*location-action*off
   (state <s> ^operator <op> +
   	      ^off <obj>)
   (<op> ^argument1 <obj>
   	 ^name op_turn-location)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.set-state <point>
 	 ^category primitive-action)
   (<point> ^id <id>
   	    ^name heat
   	    ^value on)
   (<op> ^kind atomic)
}
