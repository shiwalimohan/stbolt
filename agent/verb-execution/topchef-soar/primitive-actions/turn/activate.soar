## propose heat on for off and vice-versa
sp {propose*turn*location*on
   (state <s> ^object <obj>
   	       -^problem-space << lgsoar message-interpretation >>
	       ^topstate <ts>)
   (<obj> ^heat off)
 -->
   (<s> ^operator <op> +)
   (<op> ^name op_activate
   	 ^argument1 <obj>)
}

sp {elaborate*turn*location-action*on
   (state <s> ^operator <op> +)
   (<op> ^argument1 <obj>
   	 ^name op_activate)
   (<obj> ^id <id>)
  -->
   (<op> ^actions.set-state <point>
 	 ^category primitive-action)
   (<point> ^id <id>
   	    ^name heat
   	    ^value on)
   (<op> ^kind non-atomic)
}

