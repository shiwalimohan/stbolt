### compute distance for every location and objects
sp {elaborate*object*location
   (state <s> ^object <obj>
   	      ^location <loc>
	      ^vpredicates <p>)
-->
   (<p> ^predicate <pp>)
   (<pp> ^object <obj>)
   (<pp> ^location <loc>)
}

sp {elaborate*object*location*distance*x
   (state <s> ^vpredicates.predicate <pp>)
   (<pp> ^object <obj>
   	 ^location <loc>)
   (<loc> ^x <loc_x>)
   (<obj> ^x <obj_x>)
   -->
   (<pp> ^distx (- <obj_x> <loc_x>))
}

sp {elaborate*object*location*distance*y
   (state <s> ^vpredicates.predicate <pp>)
   (<pp> ^object <obj>
   	 ^location <loc>)
   (<loc> ^y <loc_y>)
   (<obj> ^y <obj_y>)
   -->
   (<pp> ^disty (- <obj_y> <loc_y>))
}

sp {elaborate*relationship*in
   (state <s> ^vpredicates.predicate <pp>)
   (<pp> ^distx < 0.25
   	  ^distx > -0.25
	  ^disty < 0.25
	  ^disty > -0.25
	  ^location <loc>
	  ^object <obj>)
-->
  (<pp> ^in <in-p>)
  (<in-p> ^object <obj>
  	  ^location <loc>)
}