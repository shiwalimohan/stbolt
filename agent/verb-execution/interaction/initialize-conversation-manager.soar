### the agent maintains an interaction state
## initialized at agent initialization

sp {topstate*apply*init*conversation-manager
   (state <s> ^operator <op>)
   (<op> ^name init-agent)
-->
   (<s> ^interaction <conv>)
   (<conv> ^stack <cs>
   	   ^expectation <expec>) ## not being used in agent's processing
   (<cs> ^segment <seg>)
   (<seg> ^id 0         ## depth in the interaction stack
   	  ^purpose none ## heuristically (rule based) assignment
	  ^counter 1)   ## number of external-action segments added over this segment
   (<s> ^nl <snl>) 
   (<snl> ^input-link <snl-il>
   	  ^output-link <snl-ol>)
}


