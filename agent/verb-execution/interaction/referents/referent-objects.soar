## elaborate object referents

sp {elaborate*object-referents*from*indexed-operator
   (state <s> ^topstate <s> 
   	      ^interaction <int>
	      ^smem.command <scomm>)
   (<int> ^referents.objects <robj>
   	  ^segments.segment <seg>)
   (<seg> ^purpose.indexed-operator <iop>)
   (<iop> ^{<arg1> <> name <> _relation <> _metadata} <obj1>)
-->
   (<robj> ^ref <ref1>
   	   ^object <obj1>)
   (<ref1> ^object <obj1>
   	   ^segment <seg>)
   (<smem> ^store <obj1>) ### store all referents in the focus in semantic memory
}

