#### apply push-segment on the conversation-stack

sp {apply*change-in-conversation-state
   (state <s> ^task.progress <tp>
   	      ^conversation-stack <cs>
	      ^operator <op>)
   (<cs> ^segment <prev-seg>)
   (<op> ^name push-segment-stack
   	 ^initiator <init>
	 ^purpose-type waiting-for-further-instruction)
-->
   (<cs> ^segment <seg>)
   (<seg> ^initiator <init>
    	 ^purpose <p>)
   (<p> ^type waiting-for-further-instruction)
   (<seg> ^next <prev-seg>)
   (<cs> ^segment <prev-seg> -)
}




