
# verb-commands have the HEARER in a relation
sp {top-state*interpret-messages*propose*interpret-verb-command
   (state <s> ^superstate nil
              ^lgsoar-predicates <pred>)
   (<pred> -^interpretation
            ^predicate <p1>
            ^predicate <p2>)
   (<p1> ^outer HEARER
         ^inner1 <hearer>)
   (<p2> ^inner1 <hearer>
         ^inner2 <i2>)
-->
   (<s> ^operator <o> +)
   (<o> ^name interpret-verb-command
        ^predicates <pred>)
}

